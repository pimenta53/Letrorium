/**
 * funcao jogada: altera o tabuleiro na posicao definida
 */
int jogada (elem tabuleiro, int dim, char opc, int x, int y) {
	elem n_elem;
	n_elem = tabuleiro[x][y];
	switch (opc) {
		case 'b':
			n_elem = ('(' ++ n_elem[1] ++ ')');
			break;
		case 'p':
			n_elem = ('[' ++ n_elem[1] ++ ']');
			break;
		case 'i':
			n_elem = (' ' ++ n_elem[1] ++ ' ');
			break;
		default:
			return 0;
			break;
			}	
	*tabuleiro[x][y] = n_elem;
	return 1;
}

/**
 * funcao grava: grava o tabuleiro actual num ficheiro
 */

int grava (elem tabuleiro, int dim, char nome) {
	int i,j;
	FILE *f = fopen(nome".ltr", "w");

	if(f == NULL){
		fprintf(stderr, "Erro ao criar o ficheiro '%s'\n", nomef);
		exit(0);
	}
	else {
		fprintf (f, "%d\n", dim);
		for (i=0; i<dim;i++){
			for (j=0; j<dim;j++){
				fprintf(f, "%s", tabuleiro[i][j]);
			}
		fprintf(f, '\n');
		}
	}
	fclose (f);
	return 1;
}

/**
 * funcao mostra: mostra o tabuleiro
 */

int mostra (elem tabuleiro, int dim) {
	int i, j;
	printf ("\n");
	for (i=0;i<dim;i++) {
		for (j=0;j<dim;j++) {
			printf ("%s", tabuleiro[i][j]);
				}
			printf ("\n");
			}
	return 1;
}
